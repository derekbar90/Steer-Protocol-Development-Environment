{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "yarn install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "test": {
      "name": "test",
      "command": "yarn test",
      "runAtStart": false
    },
    "asbuild:untouched": {
      "name": "asbuild:untouched",
      "command": "yarn asbuild:untouched",
      "runAtStart": false
    },
    "asbuild:optimized": {
      "name": "asbuild:optimized",
      "command": "yarn asbuild:optimized",
      "runAtStart": false
    },
    "asbuild": {
      "name": "asbuild",
      "command": "yarn asbuild",
      "runAtStart": true
    },
    "docs": {
      "name": "docs",
      "command": "yarn docs",
      "runAtStart": false
    },
    "strategy": {
      "name": "strategy",
      "command": "yarn strategy",
      "runAtStart": false
    },
    "semantic-release": {
      "name": "semantic-release",
      "command": "yarn semantic-release",
      "runAtStart": false
    },
    "commit": {
      "name": "commit",
      "command": "yarn commit",
      "runAtStart": false
    },
    "postinstall": {
      "name": "postinstall",
      "command": "yarn postinstall",
      "runAtStart": false
    }
  }
}
